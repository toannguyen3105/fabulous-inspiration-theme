{%- style -%}
  .section-featured-collection-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  
  .featured-collection__wrapper {
      max-width: var(--page-width);
      margin: 0 auto;
      padding: 0 2rem;
  }

  .featured-collection__title {
    text-align: {{ section.settings.title_alignment }};
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .featured-collection__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  .product-card {
    text-align: center;
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .product-card__image-wrapper {
      position: relative;
      padding-bottom: 100%; /* 1:1 Aspect */
      overflow: hidden;
      margin-bottom: 1rem;
      border-radius: 4px;
      background-color: #f4f4f4;
  }
  
  .product-card__image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-card__image {
      transform: scale(1.05);
  }

  .product-card__title {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .product-card__price {
    color: #666;
  }
  
  .featured-collection__view-all {
      text-align: center;
      margin-top: 3rem;
  }
  
  .button--secondary {
      display: inline-block;
      padding: 10px 24px;
      border: 1px solid currentColor;
      text-decoration: none;
      color: inherit;
      transition: all 0.2s;
  }
  .button--secondary:hover {
      background-color: #000;
      color: #fff;
  }
{%- endstyle -%}

<div class="section-featured-collection-{{ section.id }}">
    <div class="featured-collection__wrapper">
        {%- if section.settings.title != blank -%}
            <h2 class="featured-collection__title">{{ section.settings.title | escape }}</h2>
        {%- endif -%}

        <ul class="featured-collection__grid" role="list">
            {%- assign collection = section.settings.collection -%}
            {%- assign limit = section.settings.products_to_show -%}
            
            {%- for product in collection.products limit: limit -%}
                <li class="featured-collection__item">
                    <a href="{{ product.url }}" class="product-card">
                        <div class="product-card__image-wrapper">
                            {%- if product.featured_media -%}
                                <img
                                    src="{{ product.featured_media | image_url: width: 600 }}"
                                    alt="{{ product.featured_media.alt | escape }}"
                                    class="product-card__image"
                                    loading="lazy"
                                    width="{{ product.featured_media.width }}"
                                    height="{{ product.featured_media.height }}"
                                >
                            {%- else -%}
                                {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
                            {%- endif -%}
                        </div>
                        <h3 class="product-card__title">{{ product.title }}</h3>
                        <div class="product-card__price">{{ product.price | money }}</div>
                    </a>
                </li>
            {%- else -%}
                {%- for i in (1..limit) -%}
                     <li class="featured-collection__item">
                        <div class="product-card">
                             <div class="product-card__image-wrapper">
                                 {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__image' }}
                             </div>
                             <h3 class="product-card__title">{{ 'sections.featured_collection.onboarding.product_title' | t }}</h3>
                             <div class="product-card__price">{{ 1999 | money }}</div>
                        </div>
                     </li>
                {%- endfor -%}
            {%- endfor -%}
        </ul>
        
        {%- if section.settings.show_view_all and collection.all_products_count > limit -%}
          <div class="featured-collection__view-all">
            <a href="{{ collection.url }}" class="button button--secondary">
              {{ 'sections.featured_collection.view_all' | t }}
            </a>
          </div>
        {%- endif -%}
    </div>
</div>

{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.featured_collection.settings.title.label",
      "default": "Featured Collection"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "t:sections.featured_collection.settings.title_alignment.label",
      "options": [
          { "value": "left", "label": "t:sections.featured_collection.settings.title_alignment.options.left"},
          { "value": "center", "label": "t:sections.featured_collection.settings.title_alignment.options.center"},
          { "value": "right", "label": "t:sections.featured_collection.settings.title_alignment.options.right"}
      ],
      "default": "left"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured_collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "t:sections.featured_collection.settings.products_to_show.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.featured_collection.settings.columns_desktop.label"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1,
      "label": "t:sections.featured_collection.settings.columns_mobile.label"
    },
    {
        "type": "checkbox",
        "id": "show_view_all",
        "default": true,
        "label": "t:sections.featured_collection.settings.show_view_all.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.presets.name"
    }
  ]
}
{% endschema %}
